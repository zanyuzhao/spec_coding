{
  "$schema": "https://github.com/modelcontextprotocol/spec/blob/main/schema/schema.json",
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory across sessions (optional)"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "description": "Playwright browser automation for E2E testing (Microsoft official)"
    }
  }
}
